<p id="notice"><%= notice %></p>

<h1>Holdings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><b><%= holding.stock.name %></b></td>
        <td><%= holding.current_total %></td>
        <td><%= link_to 'Show', portfolio_holding_path(@portfolio.id, holding) %></td>
        <td><%= link_to 'Edit', edit_portfolio_holding_path(@portfolio, holding) %></td>
        <td><%= link_to 'Destroy', portfolio_holding_path(@portfolio.id, holding), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% holding.trades.each do |trade| %>
          <tr>
            <td><%= trade.created_at %></td>
            <td>$<%= trade.enter_price.to_i %></td>
            <td><%= trade.quantity %></td>
          </tr>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', portfolio_path(@portfolio) %> |
<%= link_to 'New Holding', new_portfolio_holding_path %>
